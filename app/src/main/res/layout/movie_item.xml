<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/teal_700"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/movieItem_IMG_movieImg"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:id="@+id/movieItem_LAYOUT_movieItemWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="140dp"
        android:layout_marginStart="20dp"
        >

        <TextView
            android:id="@+id/movieItem_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THE SUPER MARIO BROS"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/movieItem_RATING_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:isIndicator="true"
            android:stepSize="1" />

        <TextView
            android:id="@+id/movieItem_LBL_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:maxWidth="100dp"
            android:text="A plumber named Mario travels through an underground labyrinth with his brother, Luigi, trying to save a captured princess."
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>