<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/teal_700"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/details_BTN_gotoMovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to movies"
            android:layout_gravity="start"
            />

        <TextView
            android:id="@+id/details_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THE SUPER MARIO BROS"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/details_IMG_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />

        <TextView
            android:id="@+id/details_LBL_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:maxWidth="100dp"
            android:text="A plumber named Mario travels through an underground labyrinth with his brother, Luigi, trying to save a captured princess."
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:text="Actors: "
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/details_LBL_actors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Actors"
                android:textSize="15sp"
                android:textColor="@color/white"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:text="Genre: "
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/details_LBL_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Adventure, Animation, Comedy, Kids"
                android:textSize="15sp"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:text="Year: "
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/details_LBL_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="2009"
                android:textSize="15sp"
                android:textColor="@color/white"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:text="Director: "
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/details_LBL_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Aaron Horvath"
                android:textSize="15sp"
                android:textColor="@color/white"
                />


        </LinearLayout>

        <RatingBar
            android:id="@+id/details_RATING_ratingbar"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1" />


        <Button
            android:id="@+id/details_LBL_addWishlist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:text="Add to wishlist"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>



</RelativeLayout>